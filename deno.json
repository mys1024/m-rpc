{
  "name": "@mys/m-rpc",
  "version": "0.9.0",
  "tasks": {
    "run": "deno run src/main.ts",
    "run:watch": "deno run --watch src/main.ts",
    "cache": "deno cache --lock-write src/main.ts test/**/*.test.ts",
    "cache:reload": "deno cache --reload src/main.ts test/**/*.test.ts",
    "test": "deno test --allow-net",
    "test:watch": "deno test --allow-net --watch",
    "test:lcov": "deno test --allow-net --coverage && deno coverage --lcov --output=cov.lcov",
    "lint": "deno lint && deno fmt --check",
    "bump": "deno run -A jsr:@mys/bump@1",
    "publish:dry": "deno publish --dry-run"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@0.220"
  },
  "exports": {
    ".": "./src/main.ts"
  },
  "publish": {
    "include": [
      "src",
      "README*.md",
      "LICENSE",
      "deno.json"
    ]
  },
  "lint": {
    "exclude": ["npm"],
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "exclude": ["npm"]
  }
}
